<%= form_for @micropost do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>  
  <div class= "user_bar">
    <% @user ||= current_user %>
    <div class= "board_avatar">
      <%= link_to image_tag(@user.image_url(:regular)), current_user %>
    </div>
    <div class= "user_board">
      <%= f.text_area :content, maxlength: 345, placeholder: "escreva aqui sua raspa", title: "escreva uma raspa aqui" %>
      <div class= "count_micropost">
        <div id= "count">345</div>
      </div>
      <%= f.text_field :author_name, autofocus: true, value: "#{@micropost.author.name if @micropost.author}", data: {autocomplete_source: autocomplete_author_path(current_user)}, placeholder: "pensador", title: "caso esta frase seja sua, deixe o campo em branco" %>
        <%= f.text_field :tag_names, data: {autocomplete_source: autocomplete_tag_path(current_user)}, placeholder: "temas", title: "separe temas por vÃ­rgulas" %>
        
      <%= image_submit_tag "raspa_.png", class: "write round" %>
    </div>
  </div>
<% end %>